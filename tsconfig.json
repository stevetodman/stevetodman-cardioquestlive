{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "types.ts",
    "firebase.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pages",
    "functions",
    "test",
    "**/__tests__/**",
    "jest.config.ts",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
