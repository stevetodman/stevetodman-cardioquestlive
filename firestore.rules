rules_version = '2';
service cloud.firestore {
  /* Permission model:
   * - Sessions: any authed user can read. Only creator (or admin) can update/delete.
   *   createdBy is immutable; joinCode/slides validated on create/update.
   * - Responses: one doc per (user, question) using responseId = uid + "_" + questionId.
   *   Users can read; create/update only their own deterministic doc.
   * - Configs: reads allowed to authed users; writes restricted to admins (custom claim admin=true).
   */
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && ('admin' in request.auth.token) && request.auth.token.admin == true;
    }

    function isSessionOwner(sessionId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/sessions/$(sessionId)).data.createdBy == request.auth.uid;
    }

    function isSessionParticipant(sessionId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/sessions/$(sessionId)/participants/$(request.auth.uid));
    }

    match /sessions/{sessionId} {
      function hasValidVoice(voice) {
        return voice.enabled is bool &&
          (voice.floorHolderId == null || voice.floorHolderId is string) &&
          (voice.floorHolderName == null || voice.floorHolderName is string) &&
          (voice.since == null || voice.since is timestamp || voice.since is string) &&
          (voice.mode in ["idle", "resident-speaking", "ai-speaking"]);
      }

      function hasSessionShape(data) {
        return data.keys().hasAll(["createdBy", "joinCode", "slides", "questions", "currentSlideIndex", "currentQuestionId", "showResults"]) &&
          data.createdBy is string &&
          data.joinCode is string &&
          data.slides is list &&
          data.questions is list &&
          data.currentSlideIndex is number &&
          (data.currentQuestionId == null || data.currentQuestionId is string) &&
          data.showResults is bool &&
          ( !("voice" in data) || hasValidVoice(data.voice) );
      }

      function isVoiceOnlyChange() {
        return request.resource.data.diff(resource.data).changedKeys().hasOnly(["voice"]) &&
          hasValidVoice(request.resource.data.voice);
      }

      function isValidSessionCreate() {
        return hasSessionShape(request.resource.data) &&
          request.resource.data.createdBy == request.auth.uid;
      }

      function isValidSessionUpdate() {
        return hasSessionShape(request.resource.data) &&
          request.resource.data.createdBy == resource.data.createdBy;
      }

      allow read: if isAuthenticated();

      allow create: if isAuthenticated() && isValidSessionCreate();

      allow update: if isAuthenticated()
        && (
          (
            (isSessionOwner(sessionId) || isAdmin())
            && isValidSessionUpdate()
          ) ||
          (
            (isSessionOwner(sessionId) || isAdmin() || isSessionParticipant(sessionId))
            && isVoiceOnlyChange()
            && hasValidVoice(request.resource.data.voice)
          )
        );

      allow delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isAdmin());

      match /responses/{responseId} {
        function isValidResponseCreate() {
          return request.resource.data.userId == request.auth.uid &&
            request.resource.data.questionId is string &&
            request.resource.data.choiceIndex is number &&
            responseId == request.auth.uid + "_" + request.resource.data.questionId &&
            !exists(/databases/$(database)/documents/sessions/$(sessionId)/responses/$(responseId));
        }

        function isValidResponseUpdate() {
          return resource.data.userId == request.auth.uid &&
            request.resource.data.questionId == resource.data.questionId &&
            request.resource.data.choiceIndex is number &&
            responseId == request.auth.uid + "_" + resource.data.questionId;
        }

        allow read: if isAuthenticated();

        // One response per user per question
        allow create: if isAuthenticated()
          && isValidResponseCreate();

        allow update: if isAuthenticated()
          && isValidResponseUpdate();

        allow delete: if false;
      }

      match /participants/{userId} {
        function isValidParticipant(data) {
          return data.userId is string &&
            data.sessionId == sessionId &&
            data.teamId is string &&
            data.teamName is string &&
            data.points is number &&
            data.streak is number &&
            data.correctCount is number &&
            data.incorrectCount is number &&
            (data.createdAt is timestamp || data.createdAt is string) &&
            (!("role" in data) || data.role in ["member", "lead"]) &&
            (!("displayName" in data) || data.displayName is string) &&
            (!("inactive" in data) || data.inactive is bool);
        }

        // Participants can only update displayName and inactive status (not points/teamId/streak)
        function isParticipantSafeUpdate() {
          let changed = request.resource.data.diff(resource.data).changedKeys();
          return changed.hasOnly(["displayName", "inactive"]);
        }

        allow read: if isAuthenticated();
        allow create: if isAuthenticated() &&
          request.auth.uid == userId &&
          request.resource.data.userId == request.auth.uid &&
          isValidParticipant(request.resource.data);
        // Participants can only change displayName/inactive; owner/admin can change anything
        allow update: if isAuthenticated() &&
          request.auth.uid == userId &&
          request.resource.data.userId == resource.data.userId &&
          request.resource.data.sessionId == resource.data.sessionId &&
          isValidParticipant(request.resource.data) &&
          (isSessionOwner(sessionId) || isAdmin() || isParticipantSafeUpdate());
        allow delete: if false;
      }

      match /voiceCommands/{commandId} {
        // Commands that only presenters/admins can send
        function isPresenterOnlyCommand(type) {
          return type in ["pause_ai", "resume_ai", "force_reply", "end_turn", "mute_user", "freeze", "unfreeze", "skip_stage", "treatment", "scenario_event"];
        }

        // "Safe" commands that participants can also send
        function isParticipantSafeCommand(type) {
          return type in ["exam", "ekg", "cxr", "order", "toggle_telemetry", "show_ekg"];
        }

        function isValidVoiceCommand(data) {
          return (isPresenterOnlyCommand(data.type) || isParticipantSafeCommand(data.type)) &&
            (data.createdAt is timestamp || data.createdAt is string) &&
            data.createdBy is string &&
            (!("role" in data) || data.role in ["presenter", "participant"]);
        }

        allow read: if isAuthenticated();

        // Presenters/admins can create any valid command
        // Participants can only create safe commands
        allow create: if isAuthenticated() &&
          isValidVoiceCommand(request.resource.data) &&
          request.resource.data.createdBy == request.auth.uid &&
          (
            (isSessionOwner(sessionId) || isAdmin()) ||
            (isSessionParticipant(sessionId) && isParticipantSafeCommand(request.resource.data.type))
          );

        allow update, delete: if false;
      }

      match /timeline/{timelineId} {
        function isValidTimeline(data) {
          return data.createdBy is string &&
            (data.createdAt is timestamp || data.createdAt is string) &&
            data.text is string;
        }

        allow read: if isAuthenticated();
        allow create: if isAuthenticated() &&
          (isSessionOwner(sessionId) || isAdmin()) &&
          isValidTimeline(request.resource.data);
        allow update, delete: if false;
      }

      match /transcripts/{transcriptId} {
        function isValidTranscript(data) {
          return data.createdBy is string &&
            (data.createdAt is timestamp || data.createdAt is string) &&
            data.text is string;
        }

        allow read: if isAuthenticated();
        allow create: if isAuthenticated() &&
          (isSessionOwner(sessionId) || isAdmin()) &&
          isValidTranscript(request.resource.data);
        allow update, delete: if false;
      }

      // Team chat messages - only visible to same team members
      match /teamMessages/{messageId} {
        function isValidTeamMessage(data) {
          return data.userId is string &&
            data.teamId is string &&
            data.text is string &&
            data.text.size() <= 500 &&
            (data.createdAt is timestamp || data.createdAt is string);
        }

        function isSameTeam(teamId) {
          let participantPath = /databases/$(database)/documents/sessions/$(sessionId)/participants/$(request.auth.uid);
          return isAuthenticated() &&
            exists(participantPath) &&
            get(participantPath).data.teamId == teamId;
        }

        // Read: only if user is on the same team
        allow read: if isAuthenticated() &&
          isSameTeam(resource.data.teamId);

        // Create: only if user is on the team they're posting to
        allow create: if isAuthenticated() &&
          request.resource.data.userId == request.auth.uid &&
          isSameTeam(request.resource.data.teamId) &&
          isValidTeamMessage(request.resource.data);

        allow update, delete: if false;
      }
    }

    match /configs/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
